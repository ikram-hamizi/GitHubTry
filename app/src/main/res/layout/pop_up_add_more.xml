<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_gravity="center"
    android:background="@color/colorPrimaryDarkBlue"
    tools:context=".item_manipulation.PopUpAddMoreActivity">


    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:textColor="@color/colorOrange"/>

    <ImageView
        android:layout_width="85dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:src="@drawable/bag"/>


    <TextView
        android:textColor="@color/colorWhite"
        android:id="@+id/TV_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        android:textStyle="bold"
        android:layout_marginRight="6dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/ET_Quantity"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginRight="6dp"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:textColor="@color/colorWhite"
        android:textSize="10dp" />

    <TextView
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginRight="6dp"
        android:id="@+id/TV_priceForEach"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:text="Price for each:" />


    <EditText
        android:id="@+id/ET_Price"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginRight="6dp"
        android:layout_marginTop="5dp"
        android:inputType="number"

        android:textColor="@color/colorWhite"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/TV_DatePurTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="5dp"
        android:text="Date Purchased"
        android:textColor="@color/colorOrange"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TV_DatePur"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="3dp"
        android:text="00/00/0000"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:textStyle="bold"
        android:textColor="@color/colorOrange"
        android:id="@+id/TV_DateExpTitle"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_height="wrap_content"
        android:text="Date Expired" />

    <TextView
        android:id="@+id/TV_DateExp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="00/00/0000" />


    <Button
        android:onClick="onClickSave"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/BTN_Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save" />


</android.support.v7.widget.LinearLayoutCompat>

